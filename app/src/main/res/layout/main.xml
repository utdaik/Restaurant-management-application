<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý nhà hàng"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/violet"
        android:paddingVertical="15dp"

        />
    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"            android:drawableTop="@drawable/ic_employee"
            android:gravity="center"
            android:onClick="qlnhanvien"
            android:padding="12dp"
            android:text="Quản lý nhân viên" />

        <Button
            android:id="@+id/button2"
            android:onClick="qlmonan"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:text="Quản lý món ăn"
            android:drawableTop="@drawable/ic_food"
            android:background="@drawable/button_border"
            android:padding="12dp"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/baseline_restaurant_menu_24"
            android:onClick="menutheongay"
            android:padding="12dp"
            android:text="Menu theo ngày" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/baseline_table_restaurant_24"
            android:onClick="qlban"
            android:padding="12dp"
            android:text="Quản lý bàn" />
    </LinearLayout>
    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="80dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="322dp"
            android:layout_height="86dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/baseline_attach_money_24"
            android:onClick="doanhthu"
            android:padding="16dp"
            android:text="Doanh thu" />


    </LinearLayout>

</LinearLayout>